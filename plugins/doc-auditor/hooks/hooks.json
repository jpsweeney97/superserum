{
  "$comment": "Pre-commit hook for doc-auditor. DISABLED by default. To enable, remove the 'disabled' field or set to false.",
  "PreToolUse": [
    {
      "matcher": "Bash",
      "disabled": true,
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-docs.sh",
          "timeout": 60,
          "conditions": {
            "command_pattern": "git commit"
          }
        }
      ]
    }
  ]
}
